<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePageActivity">


    <Button
        android:id="@+id/likedGames"
        android:layout_width="315dp"
        android:layout_height="80dp"
        android:layout_margin="16dip"
        android:layout_marginTop="196dp"
        android:background="@drawable/button_border"
        android:backgroundTint="@color/blue"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="Liked Games"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.218" />

    <Button
        android:id="@+id/dislikedGames"
        android:layout_width="315dp"
        android:layout_height="80dp"
        android:layout_margin="16dip"
        android:layout_marginBottom="156dp"
        android:background="@drawable/button_border"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="Disliked Games"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/likedGames"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/viewAnalytics"
        android:layout_width="315dp"
        android:layout_height="80dp"
        android:layout_margin="16dip"
        android:layout_marginBottom="156dp"
        android:background="@drawable/button_border"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="View Analytics"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dislikedGames"
        app:layout_constraintVertical_bias="0.153" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:drawableEnd="@drawable/logout_button"
        android:drawablePadding="4dp"
        android:text="Logout"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dip"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:contentDescription="Back"
        android:focusable="true"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>




